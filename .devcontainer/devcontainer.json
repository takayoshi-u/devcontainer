{
    "name": "develop",
    "remoteEnv": {
        "LANG": "ja_JP.UTF-8",
        "TENV_AUTO_INSTALL": "true",
        "TZ": "Asia/Tokyo"
    },
    "remoteUser": "developer",
    "privileged": true,
    "mounts": [
        {
            "type": "bind",
            "source": "${localEnv:HOME:}${localEnv:USERPROFILE:}/.ssh",
            "target": "/home/developer/.ssh"
        },
        // {
        //     "type": "bind",
        //     "source": "${LocalEnv:HOME:}${LocalEnv:USERPROFILE:}/.aws",
        //     "target": "/home/developer/.aws"
        // },
        // {
        //     "type": "bind",
        //     "source": "${LocalEnv:HOME:}${LocalEnv:USERPROFILE:}/.config/gcloud",
        //     "target": "/home/developer/.config/gcloud"
        // },
        {
            "type": "volume",
            "source": "devcontainer_home",
            "target": "/home"
        },
        {
            "type": "volume",
            "source": "devcontainer_docker",
            "target": "/var/lib/docker"
        }
    ],
    "build": {
        "dockerfile": "Dockerfile",
        "target": "devcontainer"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "files.exclude": {
                    "**/.devcontainer": true,
                    "**/.DS_Store": true,
                    "**/.git": true,
                    "**/.vscode": true,
                    "**/Thumbs.db": true
                }
            },
            "extensions": [
                "adobeexl.adobe-markdown-authoring",
                "amazonwebservices.amazon-q-vscode",
                "amazonwebservices.aws-toolkit-vscode",
                "antfu.goto-alias",
                "asciidoctor.asciidoctor-vscode",
                "davidanson.vscode-markdownlint",
                "dbaeumer.vscode-eslint",
                "denoland.vscode-deno",
                "docker.docker",
                "docsmsft.docs-markdown",
                "docsmsft.docs-yaml",
                "github.copilot-chat",
                "github.copilot",
                "github.remotehub",
                "github.vscode-github-actions",
                "github.vscode-pull-request-github",
                "gitlab.gitlab-workflow",
                "golang.go",
                "google.gemini-cli-vscode-ide-companion",
                "google.geminicodeassist",
                "googlecloudtools.cloudcode",
                "hashicorp.terraform",
                "ms-azuretools.vscode-containers",
                "ms-azuretools.vscode-docker",
                "ms-ceintl.vscode-language-pack-ja",
                "ms-python.autopep8",
                "ms-python.black-formatter",
                "ms-python.debugpy",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.mypy-type-checker",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.vscode-python-envs",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-vscode.azure-repos",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cpptools",
                "ms-vscode.live-server",
                "ms-vscode.makefile-tools",
                "ms-vscode.remote-repositories",
                "ms-vscode.vscode-typescript-next",
                "ms-vsliveshare.vsliveshare",
                "nuxt.mdc",
                "nuxtr.nuxt-vscode-extentions",
                "nuxtr.nuxtr-vscode",
                "openai.chatgpt",
                "redhat.vscode-yaml",
                "rust-lang.rust-analyzer",
                "vue.volar",
                "xdebug.php-debug",
                "xdebug.php-pack",
                "zobo.php-intellisense"
            ]
        }
    },
    "initializeCommand": {},
    "onCreateCommand": {},
    "updateContentCommand": {},
    "postCreateCommand": {},
    "postStartCommand": {
        "docker": "nohup bash -c 'sudo /bin/dockerd > /var/log/dockerd.log 2>&1 &' > /dev/null 2>&1"
    },
    "postAttachCommand": {}
}